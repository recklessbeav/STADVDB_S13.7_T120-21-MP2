<html>
<head>
    <title>Corona Virus Update</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" 
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"> 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" media="all" href="style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Red+Rose&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:black|Ubuntu" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css2?family=Tienne&display=swap' rel='stylesheet'>

    <script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    
</head>
<body>

    <nav class="navbar navbar-expand-lg sticky-top navbar-dark">
        <ul>
            <li class="title">
                CORONA VIRUS UPDATE
            </li>
            <li>
                <i>As of July 27, 2020</i>
            </li>
        </ul>
    </nav>
           

    <div class="container">
        
        <div class="container px-5 pt-5 pb-3" style="background-color: #550526;">
            <form method="post">
                <div class="row">
                    <div id = "top-row">
                        <label class="label" for="roll_table">Roll-Up & Drill-Down</label>
                        <select class="select" id="roll_table" name="roll_table"
                            style="border: solid 1px rgb(116, 115, 115); background-color: white; cursor: pointer; height: 28px; margin-bottom: 15px">
                            <option value="None" selected>None</option>
                            <option value="Roll_Up">Roll Up</option>
                            <option value="Drill_Down">Drill Down</option>
                            <!--<option value="Dice">Dice</option>-->
                            <!--<option value="Slice">Slice</option>-->
                        </select>
                        
                    </div>
                        <div id = "filter_btn">
                            <input id = "filter" type="submit" class="btn btn-success" value="Filter">
                        </div>
                        <div id = "reset_btn">
                            <a id = "reset" href="/" class="btn btn-success btn-reset" role="button">Reset</a>
                        </div>
                </div>
                <div class="row pt-2">
                    <div class="inside_table">
                        <!-- insert table here -->
                        <label id = "report_label" class="label">REPORT</label>
                        <table border="1">
                            <!-- Roll Up -->
                            <tr>
                                <%if(Data1.length!=0){%>
                                <th>Month</th>
                                <th>New Cases</th>
                                <th>Total Deaths</th>
                                <th>New Deaths</th>
                                <th>Total Recovered</th>
                                <th>New Recovered</th>
                                <th>Active Cases</th>
                                <% } %>
                            </tr>
                            <%
                            if(Data1.length!=0){
                            var i=1;
                            Data1.forEach(function(data){
                            %>
                            <tr>
                                <td><%=data.month %></td>
                                <td><%=data.new_cases %></td>
                                <td><%=data.total_deaths %></td>
                                <td><%=data.new_deaths %></td>
                                <td><%=data.total_recovered %></td>
                                <td><%=data.new_recovered %></td>
                                <td><%=data.active_cases %></td>
                            </tr>
                            <%  i++; }) %>
                            <% } else if (Data1.length==0 && Data2.length==0 && Data3.length==0 && Data4.length==0){ %>
                                <tr>
                                    <td colspan="9">No Data Found</td>
                                </tr>
                            <% } %>
                            <!-- End of Roll Up -->

                            <!-- Drill Down -->
                            <tr>
                                <%if(Data2.length!=0){%>
                                <th>Month</th>
                                <th>Day</th>
                                <th>New Cases</th>
                                <th>Total Deaths</th>
                                <th>New Deaths</th>
                                <th>Total Recovered</th>
                                <th>New Recovered</th>
                                <th>Active Cases</th>
                                <% } %>
                            </tr>
                            <%
                            if(Data2.length!=0){
                            var i=1;
                            Data2.forEach(function(data){
                            %>
                            <tr>
                                <td><%=data.month %></td>
                                <td><%=data.day %></td>
                                <td><%=data.new_cases %></td>
                                <td><%=data.total_deaths %></td>
                                <td><%=data.new_deaths %></td>
                                <td><%=data.total_recovered %></td>
                                <td><%=data.new_recovered %></td>
                                <td><%=data.active_cases %></td>
                            </tr>
                            <%  i++; }) %>
                            <% }%>
                            <!-- End of Drill Down -->
                        </table>
                        <br>
                    </div>
                 </div>
            </form>
        </div>

        <div class="container px-5 pt-5 pb-3" style="background-color: #550526;">
            <form method="post">
                <div class="row">
                    <div id = "top-row">
                        <label class="label" for="dice_table">Dice</label>
                        <select class="select" id="dice_table" name="dice_table"
                            style="border: solid 1px rgb(116, 115, 115); background-color: white; cursor: pointer; height: 28px; margin-bottom: 15px">
                            <option value="None" selected>None</option>
                            <option value="Asia">Asia</option>
                            <option value="Europe">Europe</option>
                            <option value="Africa">Africa</option>
                            <option value="North America">North America</option>
                            <option value="South America">South America</option>
                            <option value="Australia/Oceania">Australia/Oceania</option>
                        </select>
                        
                    </div>
                        <div id = "filter_btn">
                            <input id = "filter" type="submit" class="btn btn-success" value="Filter">
                        </div>
                        <div id = "reset_btn">
                            <a id = "reset" href="/" class="btn btn-success btn-reset" role="button">Reset</a>
                        </div>
                </div>

                <div class="row pt-2">
                    <div class="inside_table">
                        <label id = "report_label" class="label">REPORT</label>
                        <table border="1">
                            <!-- Dice -->
                            <tr>
                                <%if(Data3.length!=0){%>
                                <th>Continent</th>
                                <th>Country</th>
                                <th>Month</th>
                                <th>New Cases</th>
                                <th>Total Deaths</th>
                                <th>New Deaths</th>
                                <th>Total Recovered</th>
                                <th>New Recovered</th>
                                <th>Active Cases</th>
                                <% } %>
                            </tr>
                            <%
                            if(Data3.length!=0){
                            var i=1;
                            Data3.forEach(function(data){
                            %>
                            <tr>
                                <td><%=data.continent %></td>
                                <td><%=data.country %></td>
                                <td><%=data.month %></td>
                                <td><%=data.new_cases %></td>
                                <td><%=data.total_deaths %></td>
                                <td><%=data.new_deaths %></td>
                                <td><%=data.total_recovered %></td>
                                <td><%=data.new_recovered %></td>
                                <td><%=data.active_cases %></td>
                            </tr>
                            <%  i++; }) %>
                            <% } else if (Data1.length==0 && Data2.length==0 && Data3.length==0 && Data4.length==0){ %>
                                <tr>
                                    <td colspan="9">No Data Found</td>
                                </tr>
                            <% } %>
                            <!-- End of Dice -->
                        </table>
                        <br>
                    </div>
                </div>
            </form>
        </div>

        <div class="container px-5 pt-5 pb-3" style="background-color: #550526;">
            <form method="post">
                <div class="row">
                    <div id = "top-row">
                        <label class="label" for="slice_table">Slice</label>
                        <select class="select" id="slice_table" name="slice_table"
                            style="border: solid 1px rgb(116, 115, 115); background-color: white; cursor: pointer; height: 28px; margin-bottom: 15px">
                            <option value="None" selected>None</option>
                            <option value="New Cases">New Cases</option>
                            <option value="Total Deaths">Total Deaths</option>
                            <option value="New Deaths">New Deaths</option>
                            <option value="Total Recovered">Total Recovered</option>
                            <option value="New Recovered">New Recovered</option>
                            <option value="Active Cases">Active Cases</option>
                        </select>
                        
                    </div>
                        <div id = "filter_btn">
                            <input id = "filter" type="submit" class="btn btn-success" value="Filter">
                        </div>
                        <div id = "reset_btn">
                            <a id = "reset" href="/" class="btn btn-success btn-reset" role="button">Reset</a>
                        </div>
                </div>

                <div class="row pt-2">
                    <div class="inside_table">
                        <label id = "report_label" class="label">REPORT</label>
                        <table border="1">
                            <!-- Slice -->
                            <tr>
                                <%if(Data4.length!=0){%>
                                <th>Month</th>
                                <th>Total Covid Cases</th>
                                <% } %>
                            </tr>
                            <%
                            if(Data4.length!=0){
                            var i=1;
                            Data4.forEach(function(data){
                            %>
                            <tr>
                                <td><%=data.month %></td>
                                <td><%=data.total_covid_cases %></td>
                            </tr>
                            <%  i++; }) %>
                            <% } else if (Data1.length==0 && Data2.length==0 && Data3.length==0 && Data4.length==0){ %>
                                <tr>
                                    <td colspan="9">No Data Found</td>
                                </tr>
                            <% } %>
                            <!-- End of Slice -->
                        </table>
                        <br>
                    </div>
                </div>
            </form>
        </div>

    </div>
</body>
</html>
